        <Compile Include="$(RoslynDirectory)\src\Workspaces\Core\Portable\SymbolKey\*.cs" />
        <Compile Include="$(RoslynDirectory)\src\Workspaces\SharedUtilitiesAndExtensions\Compiler\Core\Utilities\SymbolEquivalenceComparer*.cs" />
