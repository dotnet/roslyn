<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <DisableCodeQuality>True</DisableCodeQuality>
        <TargetFramework>netstandard2.0</TargetFramework>
        
        <!-- Don't enforce the code quality because we don't own it. -->
        <EnableNETAnalyzers>false</EnableNETAnalyzers>
        <EnforceCodeStyleInBuild>false</EnforceCodeStyleInBuild>
        <GenerateDocumentationFile>false</GenerateDocumentationFile>
        <RunAnalyzersDuringBuild>false</RunAnalyzersDuringBuild>
        <RunAnalyzersDuringLiveAnalysis>false</RunAnalyzersDuringLiveAnalysis>
        <IsPackable>true</IsPackable>
        <RootNamespace>Metalama.RoslynUtilities</RootNamespace>
        <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    </PropertyGroup>
    
    <PropertyGroup>
        <RoslynDirectory>..\..\..</RoslynDirectory>
    </PropertyGroup>
    
    <ItemGroup>
        <!-- The version here must be the LOWEST supported -->
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.0.0" />
        
        <InternalsVisibleTo Include="Metalama.Framework.Engine" Key="$(MetalamaKey)" />
    </ItemGroup>
    
    <ItemGroup>
