<!-- Originally, this file is named Microsoft.Net.Compilers.Toolset.props and it's been located in ..\build folder. -->
<!-- The renaming is done because NuGet requires the .props file to be named equaly to the containing NuGet package to be imported automatically. -->
<!-- The move has been done because we want this file to be imported transitively. -->
<!-- File ..\build\Microsoft.Net.Compilers.Toolset.props has been removed a we want the props to be imported transitively. -->

<Project>

  <PropertyGroup>
    <_RoslynTargetDirectoryName Condition="'$(MSBuildRuntimeType)' == 'Core'">netcoreapp3.1</_RoslynTargetDirectoryName>   
    <_RoslynTargetDirectoryName Condition="'$(MSBuildRuntimeType)' != 'Core'">net472</_RoslynTargetDirectoryName>   
    <_RoslynTasksDirectory>$(MSBuildThisFileDirectory)..\tasks\$(_RoslynTargetDirectoryName)\</_RoslynTasksDirectory>
    <RoslynTasksAssembly>$(_RoslynTasksDirectory)Microsoft.Build.Tasks.CodeAnalysis.dll</RoslynTasksAssembly> 
    <UseSharedCompilation Condition="'$(UseSharedCompilation)' == ''">true</UseSharedCompilation>
    <CSharpCoreTargetsPath>$(_RoslynTasksDirectory)Microsoft.CSharp.Core.targets</CSharpCoreTargetsPath>
    <VisualBasicCoreTargetsPath>$(_RoslynTasksDirectory)Microsoft.VisualBasic.Core.targets</VisualBasicCoreTargetsPath>

    <!-- CaravelaSourceOnlyAnalyzers must be on one line and without semicolon because it is a compiler-visible property -->
    <CaravelaSourceOnlyAnalyzers>$(CaravelaSourceOnlyAnalyzers),Microsoft.CodeAnalysis.CodeStyle,Microsoft.CodeAnalysis.CSharp.CodeStyle,StyleCop.Analyzers</CaravelaSourceOnlyAnalyzers>
    <CaravelaLicenseSources Condition="'$(CaravelaLicenseSources)'==''">User,Property</CaravelaLicenseSources>
    <CaravelaFirstRunLicenseActivatorEnabled Condition="'$(CaravelaFirstRunLicenseActivatorEnabled)'==''">True</CaravelaFirstRunLicenseActivatorEnabled>
  </PropertyGroup>

  <UsingTask TaskName="Microsoft.CodeAnalysis.BuildTasks.Csc" AssemblyFile="$(RoslynTasksAssembly)" />
  <UsingTask TaskName="Microsoft.CodeAnalysis.BuildTasks.Vbc" AssemblyFile="$(RoslynTasksAssembly)" />
  <UsingTask TaskName="Microsoft.CodeAnalysis.BuildTasks.CopyRefAssembly" AssemblyFile="$(RoslynTasksAssembly)" />

  <ItemGroup>
    <CompilerVisibleProperty Include="CaravelaDebugTransformedCode" />
    <CompilerVisibleProperty Include="CaravelaCompilerTransformerOrder" />
    <CompilerVisibleProperty Include="CaravelaCompilerTransformedFilesOutputPath" />
    <CompilerVisibleProperty Include="CaravelaDebugCompiler" />
    <CompilerVisibleProperty Include="CaravelaSourceOnlyAnalyzers" />
    <CompilerVisibleProperty Include="CaravelaLicense" />
    <CompilerVisibleProperty Include="CaravelaLicenseSources" />
    <CompilerVisibleProperty Include="CaravelaFirstRunLicenseActivatorEnabled" />
  </ItemGroup>
</Project>
