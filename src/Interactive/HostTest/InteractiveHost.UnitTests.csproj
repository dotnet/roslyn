<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <RootNamespace>Roslyn.InteractiveHost.UnitTests</RootNamespace>
    <TargetFramework>net472</TargetFramework>
  </PropertyGroup>
  <ItemGroup Label="Project References">
    <ProjectReference Include="..\..\Compilers\Test\Resources\Core\Microsoft.CodeAnalysis.Compiler.Test.Resources.csproj" />
    <ProjectReference Include="..\..\Compilers\Test\Utilities\CSharp\Microsoft.CodeAnalysis.CSharp.Test.Utilities.csproj" />
    <ProjectReference Include="..\..\Test\Utilities\Portable\Roslyn.Test.Utilities.csproj" />
    <ProjectReference Include="..\Host\Microsoft.CodeAnalysis.InteractiveHost.csproj">
      <Aliases>InteractiveHost</Aliases>
    </ProjectReference>
    <ProjectReference Include="..\..\Scripting\CSharp\Microsoft.CodeAnalysis.CSharp.Scripting.csproj" />
    
    <ProjectReference Include="..\HostProcess\InteractiveHost32.csproj">
      <SetTargetFramework>TargetFramework=net472</SetTargetFramework>
      <SkipGetTargetFrameworkProperties>true</SkipGetTargetFrameworkProperties>
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
      <OutputItemType>InteractiveHostPath_Desktop32</OutputItemType>
    </ProjectReference>
    
    <ProjectReference Include="..\HostProcess\InteractiveHost64.csproj">
      <SetTargetFramework>TargetFramework=net472</SetTargetFramework>
      <SkipGetTargetFrameworkProperties>true</SkipGetTargetFrameworkProperties>
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
      <OutputItemType>InteractiveHostPath_Desktop64</OutputItemType>
    </ProjectReference>

    <ProjectReference Include="..\HostProcess\InteractiveHost64.csproj">
      <SetTargetFramework>TargetFramework=netcoreapp3.1</SetTargetFramework>
      <SkipGetTargetFrameworkProperties>true</SkipGetTargetFrameworkProperties>
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
      <OutputItemType>InteractiveHostPath_Core</OutputItemType>
    </ProjectReference>
  </ItemGroup>
  <ItemGroup>
    <Content Include="..\HostProcess\Desktop\CSharpInteractive.rsp">
      <Link>Host\Desktop\CSharpInteractive.rsp</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="..\HostProcess\Core\CSharpInteractive.rsp">
      <Link>Host\Core\CSharpInteractive.rsp</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <!--
    Creates the same directory structure containing flavors of InteractiveHost under the output directory as is used in VSIX.
  -->
  <Target Name="_DeployInteractiveHosts" BeforeTargets="AfterBuild">
    <PropertyGroup>
      <_Desktop64Dir>@(InteractiveHostPath_Desktop64->'%(RootDir)%(Directory)')</_Desktop64Dir>
      <_Desktop32Dir>@(InteractiveHostPath_Desktop32->'%(RootDir)%(Directory)')</_Desktop32Dir>
      <_CoreDir>@(InteractiveHostPath_Desktop64->'%(RootDir)%(Directory)')</_CoreDir>
  </PropertyGroup>
    <ItemGroup>
      <_SourceFiles Include="$(_Desktop64Dir)**\*.*" TargetDirectory="Host\Desktop" />
      <_SourceFiles Include="$(_Desktop32Dir)InteractiveHost32.*" TargetDirectory="Host\Desktop" />
      <_SourceFiles Include="$(_CoreDir)\**\*.*" TargetDirectory="Host\Core" />
    </ItemGroup>
    <Copy SourceFiles="%(_SourceFiles.Identity)" DestinationFiles="$(OutputPath)%(_SourceFiles.TargetDirectory)\%(_SourceFiles.RecursiveDir)%(_SourceFiles.FileName)%(_SourceFiles.Extension)" UseHardlinksIfPossible="true" />
  </Target>
</Project>