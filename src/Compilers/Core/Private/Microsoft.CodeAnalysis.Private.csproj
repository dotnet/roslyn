<Project Sdk="Microsoft.NET.Sdk">
  <!--
    This project is intended for types that must not be visible outside project `Microsoft.CodeAnalysis`,
    not even to projects which can access internal types of `Microsoft.CodeAnalysis` (via `InternalsVisibleTo`).
  -->
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <RootNamespace>Microsoft.CodeAnalysis</RootNamespace>
    <TargetFrameworks>netcoreapp3.1;netstandard2.0</TargetFrameworks>

    <!-- NuGet -->
    <IsPackable>true</IsPackable>
    <PackageDescription>
      Private utilities for Microsoft .NET Compiler Platform ("Roslyn").
    </PackageDescription>
  </PropertyGroup>
  <ItemGroup>
    <InternalsVisibleTo Include="Microsoft.CodeAnalysis" />
  </ItemGroup>
</Project>
