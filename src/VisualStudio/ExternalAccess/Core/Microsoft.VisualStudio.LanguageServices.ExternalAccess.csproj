<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <RootNamespace>Microsoft.CodeAnalysis.ExternalAccess</RootNamespace>
    <TargetFrameworks>net472</TargetFrameworks>
    <UseWpf>true</UseWpf>

    <DefineConstants>$(DefineConstants);Unified_ExternalAccess</DefineConstants>

    <!-- NuGet -->
    <IsPackable>true</IsPackable>
    <PackageId>Microsoft.VisualStudio.LanguageServices.ExternalAccess</PackageId>
    <PackageDescription>
      A supporting package for Roslyn partners to access internal APIs.
    </PackageDescription>
  </PropertyGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="Microsoft.VisualStudio.LanguageServices.ExternalAccess.UnitTests" />

    <!--
      ⚠ ONLY APEX ASSEMBLIES MAY BE ADDED HERE ⚠
    -->
    <InternalsVisibleTo Include="Microsoft.Test.Apex.VisualStudio" Key="$(VisualStudioKey)" />

    <!--
      ⚠ ONLY COPILOT ASSEMBLIES MAY BE ADDED HERE ⚠
    -->
    <InternalsVisibleTo Include="Microsoft.VisualStudio.Copilot.Roslyn" Key="$(CopilotKey)" />

    <!--
      ⚠ ONLY TEMPLATE ASSEMBLIES MAY BE ADDED HERE ⚠
    -->
    <InternalsVisibleTo Include="Templates.Editorconfig.Wizard" Key="$(MicrosoftSharedPublicKey)" />

    <!--
      ⚠ ONLY F# ASSEMBLIES MAY BE ADDED HERE ⚠
    -->
    <InternalsVisibleTo Include="FSharp.Editor" Key="$(FSharpKey)" />
    <InternalsVisibleTo Include="FSharp.LanguageService" Key="$(FSharpKey)" />
    <InternalsVisibleTo Include="VisualFSharp.UnitTests" Key="$(FSharpKey)" />
    <InternalsVisibleTo Include="FSharp.Editor.Tests" Key="$(FSharpKey)" />
    <InternalsVisibleTo Include="FSharp.Editor.IntegrationTests" Key="$(FSharpKey)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Core\Def\Microsoft.VisualStudio.LanguageServices.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="FSharp\ExternalAccessFSharpResources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>FSharp\ExternalAccessFSharpResources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="FSharp\ExternalAccessFSharpResources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>FSharp\ExternalAccessFSharpResources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PublicAPI Include="PublicAPI.Shipped.txt" />
    <PublicAPI Include="PublicAPI.Unshipped.txt" />
    <PublicAPI Include="InternalAPI.Shipped.txt" />
    <PublicAPI Include="InternalAPI.Unshipped.txt" />
  </ItemGroup>

</Project>
