<Project>
  <Import Project="..\..\Directory.Build.targets"/>
  <ItemGroup>
    <!-- The analyzer does not apply to CodeStyle layer -->
    <PackageReference Remove="Roslyn.Diagnostics.Analyzers"/>
	
	<!-- Explicitly reference BannedApiAnalyzers, which is part of Roslyn.Diagnostics.Analyzers, but latter package reference is removed from this project -->
    <PackageReference Include="Microsoft.CodeAnalysis.BannedApiAnalyzers" Version="$(RoslynDiagnosticsAnalyzersVersion)" PrivateAssets="all" />
	<AdditionalFiles Include="$(MSBuildThisFileDirectory)\BannedSymbols.txt" />
  </ItemGroup>
</Project>